source "https://rubygems.org"

# Pin Jekyll and the Minima theme for local preview
# Using Webrick because it is not bundled with newer Ruby versions

gem "jekyll", "~> 4.4"
gem "minima", "~> 2.5"
gem "webrick", ">= 1.7"

# Optional: useful plugins
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.17"
  gem "jekyll-seo-tag", "~> 2.8"
end

# Faster file watching on Windows (optional)
gem "wdm", ">= 0.1.1", platforms: [:mingw, :x64_mingw, :mswin]
